string_helper = interface +c {

    static trim(value: string): string;
    static left_trim(value: string): string;
    static right_trim(value: string): string;

    static to_lower(value: string): string;
    static to_upper(value: string): string;

    static split(text: string, sep: string, trim_empty: bool): list<string>;

    static encode_uri(value: string): string;
    static decode_uri(value: string): string;

}
